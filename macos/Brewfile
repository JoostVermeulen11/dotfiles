# Taps
tap "homebrew/core"
tap "homebrew/boneyard"
tap "homebrew/bundle"
tap "homebrew/services"
tap "getsentry/tools"
tap "caskroom/cask"

# Make sure apps get installed in system Applications dir
cask_args appdir: '/Applications'

# Install ZSH
brew 'zsh'
brew 'zsh-completions'
brew 'zsh-git-prompt'
brew 'zsh-syntax-highlighting'

# Install GNU core utilities (those that come with OS X are outdated)
brew 'coreutils'

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew 'findutils'

# Install Binaries
brew 'git'
brew 'imagemagick'
brew 'memcached'
brew 'libmemcached'
brew 'nano'
brew 'openssl'
brew "redis", restart_service: true
brew 'rbenv'
brew 'ruby-build'
brew 'wget'
brew 'whois'

# Install PHP stuff
brew "mariadb", restart_service: true
brew 'httpd'
brew 'php@7.0'

# Install Frontend stuff
brew 'node'
brew 'yarn'

# Apps
cask 'aerial'
cask 'alfred'
cask 'visual-studio-code'
cask 'iterm2'
cask 'enpass'
cask 'phpstorm'
cask 'slack'
cask 'spotify'
cask 'google-chrome'
cask 'sourcetree'
cask 'java'

# Quicklook
cask 'qlcolorcode'
cask 'qlmarkdown'
cask 'quicklook-json'
cask 'quicklook-csv'
cask 'qlstephen'
